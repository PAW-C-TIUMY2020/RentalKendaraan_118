@model PaginatedList<RentalKendaraan_NIM.Models.Peminjaman>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayName("Tanggal Peminjaman")*@
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Tanggal Peminjaman</a>
            </th>
            <th>

                @*@Html.DisplayName("IdKendaraan")*@
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Nama Costumer</a>
            </th>
            <th>

                @Html.DisplayName("IdCustomer")
            </th>
            <th>

                @Html.DisplayName("IdJaminan")
            </th>
            <th>

                @Html.DisplayName("Biaya")
            </th>
            <th>

                @Html.DisplayName("IdPeminjaman1")
            </th>
            <th>

                @Html.DisplayName("IdPeminjaman2")
            </th>
            <th>

                @Html.DisplayName("IdPeminjaman3")
            </th>
            <th>
                @Html.DisplayName("IdPeminjamanNavigation")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TglPeminjaman)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdKendaraan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCustomer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdJaminan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Biaya)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPeminjaman1.NamaJaminan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPeminjaman2.Ketersediaan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPeminjaman3.IdPengembalian)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPeminjamanNavigation.Alamat)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPeminjaman">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPeminjaman">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPeminjaman">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@{ 
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @nextDisabled">
    Next
</a>